{
  "name": "grocery-shop",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node ./",
    "start": "babel-node ./",
    "pretest": "yarn undo:mig && yarn mig",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit --verbose",
    "mig": "sequelize db:migrate",
    "undo:mig": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all"
  },
  "dependencies": {
    "@babel/core": "^7.11.0",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-validator": "^6.6.0",
    "fancy-log": "^1.3.3",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "sequelize": "^5.21.12",
    "sequelize-cli": "^6.2.0",
    "stripe": "^8.86.0",
    "uniqid": "^5.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.21.2",
    "jest": "^26.0.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/server/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/server/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/server/database"
    ],
    "testEnvironment": "node"
  }
}
